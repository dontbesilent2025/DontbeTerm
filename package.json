{
  "name": "dontbeterm",
  "version": "1.2.0",
  "description": "Claude Code multi-session manager with smart tab naming",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild",
    "dist": "electron-builder --config.npmRebuild=false",
    "dist:mac": "electron-builder --mac --config.npmRebuild=false",
    "dist:win": "electron-builder --win --config.npmRebuild=false",
    "dist:all": "electron-builder --mac --win --config.npmRebuild=false"
  },
  "dependencies": {
    "node-pty": "^1.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.dontbeterm.app",
    "productName": "DontbeTerm",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 270,
          "y": 380,
          "type": "file",
          "path": "build/安装 DontbeTerm.command"
        }
      ],
      "title": "安装 ${productName}",
      "background": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "lib/**/*",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "main.js"
    }
  }
}
